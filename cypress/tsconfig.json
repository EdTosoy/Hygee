{
  "extends": "../tsconfig",
  "compilerOptions": {
    "baseUrl": "../node_modules",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "target": "es5",
    "lib": ["es5", "dom"],
    "types": ["cypress", "node"]
  },

  "include": [
    "integration/*.ts",
    "support/*.ts",
    "components/*.cy.tsx",
    "../node_modules/cypress",
    "**/*.ts",
    "../cypress.d.ts"
  ]
}
